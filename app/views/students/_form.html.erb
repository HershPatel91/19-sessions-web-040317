<% if student.errors.any? %>
  <ul>
    <% student.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for( student ) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :dob %>
  <%= f.date_field :dob %>
  <%= f.submit %>
<% end %>
